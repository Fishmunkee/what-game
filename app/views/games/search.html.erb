  <div class="cards">
    <% @games.each do |game| %>
    <%= link_to game_path(game) do %>
      <div class="card">
        <div class="card-title">
          <h1><%= game.title %></h1>
        </div>
        <div class="card-info-box">
          <p>
          <% game.genres.each do |genre| %>
            <%= genre.name %>
          <% end %>
        </p>
        <p>
          <% game.platforms.each do |platform| %>
            <%= platform.name %>
          <% end %>
        </p>
        </div>
            <!-- <p><%= game.description %></p> -->
        <div class="metacritic">
          <p><%= game.metacritic.to_f.round %></p>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>

