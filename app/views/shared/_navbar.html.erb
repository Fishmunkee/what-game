<div class="navbar navbar-expand-sm  navbar-lewagon <%= yield(:navbar_class) %>">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>

<% if controller_name != 'advanced_search' %>
    <%= form_tag search_games_path, class: "form d-flex", method: :get do %>
      <%= text_field_tag :q,
      params[:q],
      class: "form-control-search mr-sm-2",
      placeholder: "Enter game title..."
      %>
      <%= submit_tag "Search", class: "btn btn-outline my-2 my-sm-0 mr-4" %>
      <%= link_to "Filter", advanced_search_index_path, class: "btn btn-outline my-2 my-sm-0 mr-4 d-flex" %>
      <%= link_to random_games_path do %>
        <div id="perspective">
    <div id="die-1" class="die">
        <div class="face face-1">
            <div class="dot"></div>
        </div>
        <div class="face face-2">
            <div class="dot"></div>
            <div class="dot"></div>
        </div>
        <div class="face face-3">
            <div class="dot"></div>
            <div class="dot"></div>
            <div class="dot"></div>
        </div>
        <div class="face face-4">
            <div class="dot"></div>
            <div class="dot"></div>
            <div class="dot"></div>
            <div class="dot"></div>
        </div>
        <div class="face face-5">
            <div class="dot"></div>
            <div class="dot"></div>
            <div class="dot"></div>
            <div class="dot"></div>
            <div class="dot"></div>
        </div>
        <div class="face face-6">
            <div class="dot"></div>
            <div class="dot"></div>
            <div class="dot"></div>
            <div class="dot"></div>
            <div class="dot"></div>
            <div class="dot"></div>
        </div>
    </div>
</div>
      <% end %>
    <% end %>
<% end %>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <% if current_user.avatar.attached? %>
            <%= cl_image_tag current_user.avatar.key , class: "avatar-square dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false, crop: :fill %>
          <% else %>
            <%= image_tag "no-user-avatar.png", class: "avatar-square dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false, crop: :fill %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My Profile", user_path(@user), class: "dropdown-item" %>
            <%= link_to "My Recommendations", recommendations_user_games_path, class: "dropdown-item" %>
            <%= link_to "Edit Profile", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

