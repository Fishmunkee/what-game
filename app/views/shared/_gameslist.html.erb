  <div class="cards">
    <% @games.each do |game| %>
    <% url = game.medium.where(media_type: "cover").first&.url %>
    <%= link_to game_path(game) do %>
      <div class="card game-card" style='background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.1)), url("https://images.igdb.com/igdb/image/upload/t_cover_big/<%= url %>.jpg");'>
        <div class="card-title">
          <h1><%= game.title %></h1>
        </div>
        <div class="card-info-box">
          <p>
          <% game.genres.each do |genre| %>
            <%= genre.name %>
          <% end %>
        </p>
        <p>
          <% game.platforms.each do |platform| %>
            <%= platform.name %>
          <% end %>
        </p>
        </div>
            <!-- <p><%= game.description %></p> -->
        <div class="metacritic">
          <p><%= game.metacritic.to_f.round %></p>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
